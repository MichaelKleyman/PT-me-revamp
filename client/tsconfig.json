{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "jsx": "react-jsx",
    "paths": {
      "@client/*": ["./src/*"],
      "@server/*": ["../server/src/*"]
    }
  },
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"] // explicitly tells Vite to recognize these file types as assets that can be imported.
}
